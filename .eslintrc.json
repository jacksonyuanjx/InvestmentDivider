{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "rules": {
        "comma-dangle": "off",
        "no-unused-vars": [
            "warn",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "indent": ["error", 4],
        "quotes": [2, "double", { "avoidEscape": true }],
        "no-console": "off",
        "max-len": "off",
        "linebreak-style": "off",
        "no-underscore-dangle": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "no-return-assign": "off",
        "no-loop-func": "off",
        "no-param-reassign": "off"
    }
}
